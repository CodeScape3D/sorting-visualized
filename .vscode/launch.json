{
	"configurations": [
		{
			"type": "chrome",
			"request": "launch",
			"name": "Launch Chrome against localhost",
			"url": "http://localhost:3000",
			"webRoot": "${workspaceFolder}",
			"skipFiles": [
				"node_modules/**/*.js",
				"node_modules/*/*.*",
				"${workspaceFolder}/node_modules/**",
				"lib/**/*.js"
			]
		}
	]
}
